<!DOCTYPE html>
<html>
<head>
  <title>TheDreamBoysApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header"><%= link_to "Home", games_path, class: "navbar-brand" %></div>
    <div class="navbar-collapse collapse" id="navbar-main">
      <% if current_user %>
        <ul class="nav navbar-nav">
          <li><%= link_to "Your profile", user_path(current_user), id: "themes" %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Logout", session_path(current_user), method: "DELETE" %></li>
        </ul>




    <form action="/users/<%= current_user.id %>/games/search" method="post">
      <%#= csrf_meta_tags %>
      <input id="game_search" type="hidden" name="authenticity_token">
      <input type="text" placeholder="Search for a game" name="search_term">
    </form>
    <form action="/users/search" method="post">
      <input id="user_search" type="hidden" name="authenticity_token">
      <input type="text" placeholder="Search for a user" name="search_term">
    </form>









          <% else %>
        <ul class="nav navbar-nav">
          <li><%= link_to "Login", new_session_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Create an account", new_user_path %></li>
        </ul>
        <% end %>
      </ul>
    </div>
  </div>
</div>
  <div class="container">
    <div class="page-header" id="banner">
      <div class="row">
        <div class="col-lg-8 col-md-7 col-sm-6">
    <%= yield %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

<%= render partial: "/headbar" %>

<ul>
  <% @games.each do |game| %>

    <li><%= link_to game.title, game_path(game) %> : <%= game.description %>  </li>
        <ul>
            <% game.comments.each do |comment| %>
              <li><%= comment.content %></li>
            <% end %>

        </ul>
      <% if current_user %>
        <%= button_to "Add to my library", user_add_game_path({user_id: current_user.id, game_id: game.id}), method: "POST" %>
      <% end %>

  <% end %>
